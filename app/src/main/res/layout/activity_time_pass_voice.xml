<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".java.activity.TimePassVoiceActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey! Why not you say something?\nJust click on the mic!"
            android:textAlignment="center"
            android:textSize="26sp" />
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/mic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:contentDescription=""
            android:gravity="center"
            android:paddingTop="2dp"
            android:src="@drawable/ic_mic_with_blue_bg" />

        <ImageView
            android:id="@+id/whatsapp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/mic"
            android:contentDescription=""
            android:paddingRight="5dp"
            android:src="@drawable/ic_left_arrow"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/mic"
            android:contentDescription=""
            android:paddingLeft="5dp"
            android:src="@drawable/ic_chat"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/twitter"
            android:contentDescription=""
            android:paddingLeft="5dp"
            android:src="@drawable/ic_chat"
            android:visibility="gone" />


    </RelativeLayout>

</LinearLayout>