            <include
                layout="@layout/shrimmer_item_view_essentials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/normal_margin" />

            <include
                layout="@layout/shrimmer_item_view_essentials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/normal_margin" />

            <include
                layout="@layout/shrimmer_item_view_essentials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/normal_margin" />

            <include
                layout="@layout/shrimmer_item_view_essentials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/normal_margin" />

            <include
                layout="@layout/shrimmer_item_view_essentials"
